@using DevExpress.ExpressApp
@using DevExpress.ExpressApp.Blazor
@using HRMiniApp.Module.BusinessObjects
@inherits ComponentBase
@inject IObjectSpace ObjectSpace

<div class="card p-3">
    <h3>Employee (Custom Detail)</h3>

    <div class="mb-2">
        <label>Name</label>
        <input class="form-control" @bind="Employee.FirstName"/>
    </div>

    <div class="mb-2">
        <label>Email</label>
        <input class="form-control" @bind="Employee.LastName"/>
    </div>

    <button class="btn btn-primary" @onclick="Save">Save</button>
    <button class="btn btn-secondary ms-2" @onclick="Cancel">Cancel</button>
</div>

@code {
    private Employee Employee { get; set; }

    private void Save()
    {
        ObjectSpace.CommitChanges();
    }

    private void Cancel()
    {
        ObjectSpace.Rollback();
    }
}
